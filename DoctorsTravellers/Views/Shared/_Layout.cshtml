<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">@*ADD CSS LINKS HERE!*@
       
    @Scripts.Render("~/bundles/modernizr")
     @Styles.Render("~/Content/css")
</head>
<body>
    <ul id="bar" class="nav nav-pills">
        <li class="bar-val" role="presentation"><button id="brand" type="button" class="btn btn-success, title">Doctors&Travellers</button></li>
        <li class="bar-val" role="presentation"><a href="#"><img src="~/images/user.png" aria-hidden="true" /></a></li>
        <li class="bar-val" role="presentation"><a href="#"><img src="~/images/noticebell.png" aria-hidden="true" /><span id="missed"class="badge">3</span></a></li>
@*                <li role="presentation"><a href="#"><img src="~/images/filter2.png" aria-hidden="true" /></a></li>*@
        <li class="bar-val" id="signin" role="presentation"><a href="~/Home/SignIn">SignIn</a></li>
        <li  class="bar-val" id="signup" role="presentation"><a href="~/Home/SignUp">SignUp</a></li>
    </ul>
    @RenderBody()
    <footer class="footer">
        <div >
            <p class="text-muted">© 2015 D&T Copyright all rights reserved </p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    @*ADD JAVASCRIPT LINKS HERE!*@
    <script>
        $('#brand').live("click", function (e) {

            window.location.assign("/Home")

        }
 );
        $('.bar-val a').live("mouseover", function (e) {
           
            $(this).css("background-color", "black");

            }
        );
        $('.bar-val a').live("mouseleave", function (e) {

            $(this).css("background-color", "#5f5f5f");

        }
);
    </script>

</body>
</html>
