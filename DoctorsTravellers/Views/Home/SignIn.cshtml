@{
    ViewBag.Title = "SignIn";
}

<!DOCTYPE html>
<html>
    
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>SignIn</title>
</head>

<body>


    <div id="SignInBox" class="container">
        <h1>SignIn!</h1>
        <div class="form-group">
            <form action='SignIn' name="SignInForm" id="signInbutton" method="POST" onsubmit="return myFunc()">
                <h2>User Name</h2>
                <input type="text" onclick="txtClicked();" placeholder="User Name" name="username" id="username" required/><br />
                <h2>Password</h2> 
                <input type="password" onclick="txtClicked();" placeholder="Password" name="password" id="password" required/><br />
                <input id="SignInButton" class="title" type="submit" style="border:none" value="sign In"/>
            </form>
        </div>
    </div>
</body>
</html>